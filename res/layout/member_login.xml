<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:id="@+id/ml_rl1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ml_tv1"
			android:layout_width="120dp"
			android:layout_height="50dp"
			android:textSize="17dp"
			android:text="그룹 아이디" />
		<EditText
			android:layout_toRightOf="@id/ml_tv1"
			android:id="@+id/groupuid_edt"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:text="" />
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/ml_rl2"
		android:layout_below="@id/ml_rl1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ml_tv2"
			android:layout_width="120dp"
			android:layout_height="50dp"
			android:textSize="17dp"
			android:text="비밀번호" />
		<EditText
			android:layout_toRightOf="@id/ml_tv2"
			android:id="@+id/grouppwd_edt"
			android:password="true"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:text="" />
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/ml_rl3"
		android:layout_below="@id/ml_rl2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		<Button
			android:id="@+id/mlogin_btn"
			android:layout_width="120dp"
			android:layout_height="50dp"
			android:text="로그인" />
		<Button
			android:id="@+id/mcancle_btn"
			android:layout_toRightOf="@id/mlogin_btn"
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:text="취소" />
	</RelativeLayout>
</RelativeLayout>
