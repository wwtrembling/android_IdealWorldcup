<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/question_modify_relative"
	android:gravity="center_vertical|center_horizontal"
	android:layout_width="100dp"
	android:layout_height="wrap_content"
	android:background="#ffffff"
	android:padding="3dp">
	<ImageView
		android:id="@+id/question_modify_iv"
		android:src="@drawable/ic_blank_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/question_modify_relative" />
	<TextView
		android:id="@+id/question_modify_txt"
		android:layout_width="fill_parent"
		android:layout_height="30dp"
		android:layout_below="@+id/question_modify_iv"
		android:textSize="7dp"
		android:gravity="center_vertical"
		android:text="이미지 이름" />
	<CheckBox
		android:id="@+id/question_modify_chkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/question_modify_txt"></CheckBox>

</RelativeLayout>
