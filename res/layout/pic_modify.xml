<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ffffff"
	android:id="@+id/pic_modify"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:background="#ffffff"
		android:id="@+id/pic_modify_lo1"
		android:layout_weight="1"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		<ImageView
			android:id="@+id/pic_modify_image"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
	</LinearLayout>
	<LinearLayout
		android:background="#ffffff"
		android:id="@+id/pic_modify_lo2"
		android:layout_weight="1"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		<RelativeLayout
			android:layout_height="fill_parent"
			android:id="@+id/pic_modify_lo2_ro1"
			android:background="#ffffff"
			android:layout_width="fill_parent">
			
			<TextView
				android:id="@+id/pic_modify_lo2_ro1_txtname"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:text="DETAIL"
				android:textColor="#000000"></TextView>
			<EditText
				android:id="@+id/pic_modify_lo2_ro1_editname"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:padding="10dp"
				android:layout_toRightOf="@+id/pic_modify_lo2_ro1_txtname">
			</EditText>
			
			<TextView
				android:id="@+id/pic_modify_lo2_ro1_txtowner"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:text="OWNER"
				android:textColor="#000000"
				android:layout_below="@+id/pic_modify_lo2_ro1_txtname"></TextView>
			<Spinner
				android:id="@+id/pic_modify_lo2_ro1_spinnerowner"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:padding="10dp"
				android:layout_toRightOf="@+id/pic_modify_lo2_ro1_txtowner"
				android:layout_below="@+id/pic_modify_lo2_ro1_editname">
			</Spinner>
			
			<Button
				android:id="@+id/pic_modify_lo2_ro1_btnregist"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="REGIST"
				android:layout_below="@+id/pic_modify_lo2_ro1_btnreload"></Button>
			<Button
				android:id="@+id/pic_modify_lo2_ro1_btnreload"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Image Reload"
				android:layout_below="@+id/pic_modify_lo2_ro1_spinnerowner"></Button>
			<Button
				android:id="@+id/pic_modify_lo2_ro1_btnclose"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="CLOSE"
				android:layout_below="@+id/pic_modify_lo2_ro1_btnregist"></Button>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
